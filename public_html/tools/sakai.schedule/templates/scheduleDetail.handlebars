{{!  
This template builds the schedule details

@author OpenCollab
@since 1.0.0
}}
<div class="portletBody specialLink">
    <h3>{{title}}</h3>
    <table cellspacing="0" class="itemSummary">
        <tbody>
            <tr>
                <th>Start Date</th>
                <td>{{displayDate start}} SAST</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>{{displayDate end}} SAST</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{{description}}}</td>
            </tr>
            {{#if attachments}}
            <tr>
                <th>Attachments</th>
                <td>
                    <ul class="attachList">
                        {{#each attachments}}
                        {{{resourceIcon type}}}
                        <a href="data/{{downloadPath}}" target="_blank">{{name}}</a> ({{resourceSize false size}})													</ul>
                        {{/each}}
                </td>
            </tr>
            {{/if}}
            <tr>
                <th>Frequency</th>
                <td>{{displayFrequency recurrence_interval frequency_description recurrence_count recurs_until}}</td>
            </tr>
            <tr>
                <th>Event Type</th>
                <td>{{{eventIcon type}}} {{type}}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{owner}}</td>
            </tr>
            <tr>
                <th>Site</th>
                <td>{{site}}</td>
            </tr>
            {{#if location}}
            <tr>
                <th>Location</th>
                <td>{{location}}</td>
            </tr>
            {{/if}}            
            <tr>
                <th>From Site</th>
                <td>{{#if from_site}}{{from_site}}{{else}}"{{site}}"({{site}}){{/if}}</td>
            </tr>
        </tbody>
    </table>
</div>